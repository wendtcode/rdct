{
  "name": "rdct",
  "version": "1.0.3",
  "description": "Deeply redact all the things",
  "main": "dist/rdct.js",
  "browser": "dist/rdct.umd.js",
  "module": "dist/rdct.es.js",
  "scripts": {
    "dev": "microbundle watch",
    "build": "microbundle",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "test": "mocha"
  },
  "keywords": [
    "redact",
    "redaction",
    "deep redact",
    "deep redaction"
  ],
  "files": [
    "index.js",
    "dist"
  ],
  "author": "Brian Wendt <brian@wendtcode.com> (https://bwendt.com)",
  "license": "MIT",
  "repository": "wendtcode/rdct",
  "devDependencies": {
    "chai": "^4.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "microbundle": "^0.12.0-next.7",
    "mocha": "^7.1.1",
    "prettier": "^1.19.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "prettier"
    ]
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "jsxBracketSameLine": true,
    "semi": false,
    "singleQuote": true
  }
}
